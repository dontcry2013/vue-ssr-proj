{
  "name": "vue-ssr-proj",
  "version": "1.0.0",
  "description": "a sever-side rendering project with express as back-end server",
  "main": "index.js",
  "scripts": {
    "dev": "node server",
    "start": "cross-env NODE_ENV=production node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules",
    "test": "rimraf dist && cross-env NODE_ENV=production webpack --config build/webpack.base.config.js --progress --hide-modules"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "vue": "^2.5.21",
    "vue-router": "^3.0.2",
    "vue-server-renderer": "^2.5.21"
  },
  "devDependencies": {
    "css-loader": "^2.1.0",
    "rimraf": "^2.6.3",
    "vue-loader": "^15.5.0",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.3"
  }
}
